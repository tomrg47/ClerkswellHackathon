        <!-- Phone Number Login Form -->
        <form id="phoneLoginForm" class="login-form hidden">
            <div id="phoneStep" class="phone-step">
                <div class="form-group">
                    <label for="phoneNumber" class="form-label">Phone Number</label>
                    <input 
                        type="tel" 
                        id="phoneNumber" 
                        name="phoneNumber" 
                        class="form-input" 
                        placeholder="+44 7700 900000"
                        required
                        autocomplete="tel"
                    />
                </div>

                <button type="submit" id="phoneSubmitButton" class="login-button">
                    <span id="phoneButtonText">Send Code</span>
                </button>
            </div>

            <div id="verifyStep" class="verify-step hidden">
                <div class="form-group">
                    <label for="verificationCode" class="form-label">Verification Code</label>
                    <input 
                        type="text" 
                        id="verificationCode" 
                        name="verificationCode" 
                        class="form-input" 
                        placeholder="Enter 6-digit code"
                        required
                        maxlength="6"
                        pattern="[0-9]{6}"
                    />
                </div>

                <button type="button" id="verifyButton" class="login-button">
                    <span id="verifyButtonText">Verify & Log In</span>
                </button>

                <button type="button" id="resendCodeButton" class="resend-button">
                    Resend Code
                </button>
            </div>
        </form>

        <div class="login-footer">
            <p>Don't have an account? <a href="@Url.Action("Index", "Home")" class="login-link">Get Help</a> to start.</p>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/login.js"></script>
}