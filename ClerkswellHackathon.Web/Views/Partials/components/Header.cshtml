@{
    var location = Context.Request.Path;
    var logoUrl = Url.Content("~/images/logo.png"); // Adjust path as needed
}

<header class="site-header">
    <div class="header-logo-container">
        <a href="@Url.Action("Index", "Home")">
            <img src="@logoUrl" alt="Restore Hope" class="header-logo" />
        </a>
    </div>
    
    <nav class="header-nav">
        <a href="@Url.Action("Index", "Home")" class="nav-link @(location == "/" ? "nav-link-active" : "")">
            Get Help
        </a>
        <a href="@Url.Action("Journey", "Home")" class="nav-link @(location == "/journey" ? "nav-link-active" : "")">
            My Journey
        </a>
        <a href="/login" class="nav-link @(location == "/login" ? "nav-link-active" : "")">
            Log In
        </a>
        <button class="header-donate-btn">
            Donate
        </button>
    </nav>

    @* Mobile Menu *@
    <div class="header-mobile-menu">
        <a href="@Url.Action("Login", "Account")" class="mobile-login-link">Log In</a>
    </div>
</header>

